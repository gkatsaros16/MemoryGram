<div class="container">
  <div class="post">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <div class="notification-stream text-center">
          <h2>Notification Stream | <%= link_to 'Read All', read_all_path %></h2>
        </div>
        <ul class="notification-index-list">
          <div>
            <%= render 'notifications' %>
          </div>
          <div class="text-center" id="paginator-notifications">
            <%= link_to_next_page @notifications, 'LOAD MORE', remote: true, id: 'load_more' %>
          </div>
        </ul>
      </div>
    </div>
  </div>
</div>
